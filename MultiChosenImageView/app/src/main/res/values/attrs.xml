<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiChosenImageView">
        <!--选择类型,默认图片-->
        <attr name="choseType" format="enum">
            <!--图片-->
            <enum name="image" value="0"/>
            <!--视频-->
            <enum name="video" value="1"/>
        </attr>
        <!--来源，默认相册-->
        <attr name="choseFrom" format="enum">
            <!--相机-->
            <enum name="camera" value="0"/>
            <!--相册-->
            <enum name="gallery" value="1"/>
            <!--以上两者-->
            <enum name="both" value="2"/>
        </attr>
        <!--是否可删除，也就是右上角删除按钮,默认可删除-->
        <attr name="deletable" format="boolean"/>
        <!--默认‘上传图片’图片，默认自带-->
        <attr name="defaultImage" format="reference"/>
        <!--边长模式，指定宽高，等宽正方形，等高正方形-->
        <attr name="shapeMode" format="enum">
            <enum name="normal" value="0"/>
            <enum name="equalsWidth" value="1"/>
            <enum name="equalsHeight" value="2"/>
        </attr>
        <!--上传文件的大小限制，以Mb为单位-->
        <attr name="limitedSize" format="integer"/>

    </declare-styleable>
</resources>