<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.jyx.myimageview.MultiChosenImageView
            android:id="@+id/multiChosenImageView"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:choseFrom="gallery"
            app:choseType="image"
            app:shapeMode="equalsWidth"
            app:limitedSize="10"
            android:layout_weight="1"/>
        <com.jyx.myimageview.MultiChosenImageView
            android:id="@+id/multiChosenImageView2"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:choseFrom="gallery"
            app:choseType="image"
            app:limitedSize="10"
            android:layout_weight="1"/>
        <com.jyx.myimageview.MultiChosenImageView
            android:id="@+id/multiChosenImageView3"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:choseFrom="gallery"
            app:choseType="image"
            app:limitedSize="10"
            android:layout_weight="1"/>
        <com.jyx.myimageview.MultiChosenImageView
            android:id="@+id/multiChosenImageView4"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:choseFrom="gallery"
            app:choseType="video"
            android:layout_weight="1"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>